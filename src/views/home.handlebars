<div class="container">
    <h1 class="d-flex justify-content-center mt-3">Lista de Productos:</h1>
    <div id="productsContainer" class="d-flex flex-wrap justify-content-evenly mt-5">
        {{#if docs.length}}
        {{#each docs}}
        <div class="card ms-2 my-2 ">
            <h5 class="card-header d-flex justify-content-center">{{title}}</h5>
            <div class="card-body">
                <p>Descripcion: {{description}}</p>
                <p>Precio: ${{price}}</p>
                <p>Código: {{code}}</p>
                <p>Categoría: {{category}}</p>
                <p>Stock: {{stock}}</p>
            </div>
            <div>
                <button type="button" class="btn btn-sm btn-light border-top w-100">Add to Cart</button>
            </div>
            <input type="hidden" value="productId_{{id}}" />
        </div>
        {{/each}}
        {{else}}
            <h2 class="d-flex justify-content-center mt-3">No hay productos para mostrar.</h2>
        {{/if}}
    </div>
    <div class="d-flex justify-content-end my-5">
        {{#if hasPrevPage}}
            <a type="button" class="btn btn-sm btn-light border border-2" href="products?page={{prevPage}}">Previous</a>
        {{/if}}
        <p class="row align-items-center mx-3 my-0">Page {{page}} of {{totalPages}}</p>
        {{#if hasNextPage}}
            <a type="button" class="btn btn-sm btn-light border border-2 px-3" href="products?page={{nextPage}}">Next</a>
        {{/if}}
    </div>
</div>
